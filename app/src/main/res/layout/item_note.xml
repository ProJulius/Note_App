<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_item_note"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:elevation="4dp"
    android:id="@+id/itemNote"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_target"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"/>
        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Note"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_schedule"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Deadline"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_purple"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="00:00"
        android:gravity="center_vertical"
        android:layout_marginLeft="55dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/grey_dark"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="01/01/1970"
        android:gravity="center_vertical"
        android:layout_marginLeft="55dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/grey_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_information"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Description"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_regular"
        android:text="Hom nay toi ban"
        android:textColor="@color/grey_dark"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp"/>
</LinearLayout>